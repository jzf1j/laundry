<% include ../partials/header_manager %>
<div class="container">



        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li  class="breadcrumb-item"><a href="/admin">admin</a></li>
            <li  class="breadcrumb-item"><a href="/admin/users">user</a></li>
            <li class="breadcrumb-item" class="active">edit user</li>
          </ol>
        <div class="col-sm-12">
          
            
          <h1>edit User</h1>
        
        <form method="post" action="/manager_penel/users/update/<%= item._id %>">


          
            
            <div class="form-group">
                <label for="item">Email: <b><%= item.username %></b></label>
            </div>
            <div class="form-group">
                    <label for="item">join date: <b><%= item.user_joined_date.toDateString() %></b></label>
            </div>
                
            
            <div class="form-group">
                <label for="item">display Name:</label>
                <input type="text" class="form-control" id="item" name="displayName" value="<%= item.displayName %>">
            </div>
            <div class="form-group">
                <label for="item">pass word:</label>
                <input type="password" class="form-control" id="item" name="password" >
            </div>
            <div class="form-group">
                <label for="item">role:</label>
                <select class="form-control col-md-3" id="item" name="role">
                        <option value="subscriber" <%= (item.role == 'subscriber')?'selected':'' %> >subscriber</option>
                        <option value="admin" <%= (item.role == 'admin')?'selected':'' %>>admin</option>
                        
                      </select>
            </div>
                
              

        
           
        <button type="submit" class="btn btn-primary">Update</button>




        </form>
    
    
    
    
</div>
<% include ../partials/footer %>