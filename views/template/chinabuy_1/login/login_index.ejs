<% include ../partials/header %>

<div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="text-center login-title">Sign in 
          <div class="account-wall"><img src="" class="profile-img"/>
            <div class="text-danger"><%= message %></div>
            <form action="/login/login" method="POST" class="form-signin">
              <br> <input type="email" name="username" placeholder="Email" required="required" autofocus="autofocus" class="form-control" /> 
              <br><input type="password" name="password" placeholder="Password" required="required" class="form-control"  />
              <br><button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button><span class="clearfix"></span>
            </form><br>
          </div> 
          <br>
          <a href="/login/signup" class="text-center new-account">Create an account</a>
          
        </h1>
      </div>
    </div>
  </div>

